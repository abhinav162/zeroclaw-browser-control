{
  "manifest_version": 3,
  "name": "ZeroClaw Browser Control",
  "version": "1.0.0",
  "description": "Allows ZeroClaw AI assistant to control and scrape Chrome tabs via WebSocket commands.",
  "permissions": [
    "tabs",
    "scripting",
    "storage",
    "webNavigation",
    "activeTab"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
